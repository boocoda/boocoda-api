{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Nest Framework",
      "type": "node",
      "request": "launch",
      "args": ["${workspaceFolder}/src/main.ts"],
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register", "-r", "tsconfig-paths/register"],
      "envFile": "${workspaceFolder}/.env",
      "sourceMaps": true,
      "smartStep": true,
      "cwd": "${workspaceRoot}",
      "console": "integratedTerminal",
      "protocol": "inspector"
    }
  ]
}
